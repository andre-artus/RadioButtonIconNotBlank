<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/toggle_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checkedButton="@+id/button1"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/button1"
            style="@style/radio_button_style"
            android:background="@drawable/button_1_bg"
            android:contentDescription="@string/button1Title"
            android:text="@string/button1Title" />

        <RadioButton
            android:id="@+id/button2"
            style="@style/radio_button_style"
            android:background="@drawable/button_2_bg"
            android:contentDescription="@string/button2Title"
            android:text="@string/button2Title" />

        <RadioButton
            android:id="@+id/button3"
            style="@style/radio_button_style"
            android:background="@drawable/button_3_bg"
            android:contentDescription="@string/button3Title"
            android:text="@string/button3Title" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
